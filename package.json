{
  "name": "percept-dither",
  "version": "0.0.0",
  "description": "Perceptual (OkLrAB) Based Color Space Dither",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "npx prettier . -c",
    "format:fix": "npx prettier . -w",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "add-change": "git update-index --again",
    "before-commit": "npm run format:fix && npm run lint:fix && npm run add-change && npm run test:ci",
    "check": "npm run format && npm run lint && npm run test:ci",
    "test": "vitest --typecheck",
    "test:ci": "vitest run --silent --typecheck",
    "prepare": "husky",
    "clean": "rm -rf ./dist"
  },
  "author": "epsilonError",
  "license": "BlueOak-1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epsilonError/percept-dither.git"
  },
  "bugs": {
    "url": "https://github.com/epsilonError/percept-dither/issues"
  },
  "homepage": "https://github.com/epsilonError/percept-dither#readme",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@tsconfig/strictest": "^2.0.6",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.18.12",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vitest": "4.0.3"
  },
  "dependencies": {
    "colorjs.io": "^0.6.0-beta.1"
  }
}
